@model Model.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-header">
        <h3 class="card-title">Chi tiết danh mục</h3> 
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Code)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Code)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Thumbnail)
            </dt>
            <dd class="col-sm-10 ">
                @if (@Model.Thumbnail != null)
                {
                    <br />
                    <img id="previewThumbnail" width="90" height="100" src="~/user-content/@Model.Thumbnail.FileName" />
                    <br />
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EditOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EditOn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EditBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EditBy)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Updated" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

</div>
