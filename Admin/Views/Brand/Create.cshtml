@model Brand
@{
    ViewData["Title"] = "Thêm thương hiệu";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <h4 class="card-title">@ViewData["Title"]</h4>
            </div>
            <div class="col-md-6 ">
                <div class="text-right">
                    <button class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label>Tên thương hiệu</label>
                <input asp-for="Name" type="text" class="form-control Title" placeholder="Tên thương hiệu" maxlength="250" />
                <small>Tối đa 250 ký tự</small>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Slug</label>
                <input asp-for="Slug" type="text" class="form-control " placeholder="Slug" maxlength="250" id="permalink" readonly />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Mô tả</label>
                <textarea asp-for="Description" class="form-control" placeholder="Mô tả" rows="8" cols="50"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsPublished" class="form-check-input" type="checkbox" id="IsPublished">
                    <label class="form-check-label" for="IsPublished">
                        Hiển thị
                    </label>
                    <span asp-validation-for="IsPublished" class="text-danger"></span>
                </div>
            </div>
          
            <div class="form-group">
                <button class="btn btn-primary" type="submit">
                    Lưu
                </button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/Slug/speakingurl.min.js"></script>
    <script src="~/lib/Slug/jquery.stringtoslug.js"></script>
    <script>
        $(document).ready(function () {
            $(".Title").stringToSlug();

        });
    </script>
 
}