@{
    ViewData["Title"] = "Wish List Sharing Information";
}

<div class="row">
    <div class="col-md-3">
        <partial name="_AccountMenu" />
    </div>
    <div class="col-md-9">
        <h2>Wish List Sharing Information</h2>
        <p>@Html.ValidationSummary(false)</p>
        <hr />
        <form asp-controller="WishList" asp-action="Share" method="POST">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Email Address</label>
                <div class="col-sm-8"><input class="form-control" type="email" name="EmailAddress" /></div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Message</label>
                <div class="col-sm-8"><textarea class="form-control" rows="5" cols="50" name="Message"></textarea></div>
            </div>
            <div class="form-group row">
                <div class="offset-md-4 col-md-8">
                    <button type="submit" class="btn btn-primary share-wishlist">Share</button>
                </div>
            </div>
        </form>
    </div>
</div>
