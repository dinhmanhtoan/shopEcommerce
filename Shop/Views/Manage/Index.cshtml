@using Model.ViewModel.Manage;
@model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
}
@if (ViewData["StatusMessage"] != null)
{
    <p class="text-success">@ViewData["StatusMessage"]</p>
}
<div class="row">
    <div class="col-md-3">
        <partial name="_AccountMenu" />
    </div>
    <div class="col-md-9">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Account Information</div>
                    <div class="card-body">
                        @Model.FullName <br />
                        @Model.Email
                        <p class="text-right">
                            <a href="~/user/info" class="text-primary">Edit</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Security</div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-md-5">Password:</dt>
                            <dd class="col-md-7">
                                @if (Model.HasPassword)
                                {
                                    <a  asp-controller="Manage" asp-action="ChangePassword"  class="text-primary">Change</a>
                                }
                                else
                                {
                                    <a  asp-controller="Manage" asp-action="SetPassword" class="text-primary">Create</a>
                                }
                            </dd>
                            <dt class="col-md-5">External Logins:</dt>
                            <dd class="col-md-7">
                                @Model.Logins.Count <a asp-controller="Manage" asp-action="ManageLogins"  class="text-primary">Manage</a>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Default shipping address</div>
                    <div class="card-body">
                        <vc:default-shipping-address></vc:default-shipping-address>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

