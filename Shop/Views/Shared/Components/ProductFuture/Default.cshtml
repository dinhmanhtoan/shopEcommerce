@model List<ProductVm>


<div class="container">
    <div class="col-md-12">
        <ul class="owl-carousel owlCarousel_slider2 owl-theme">
            @foreach (var item in Model)
            {
                <li class="item">
                    <div class="product-item">
                        <div class="product-grid6" id="item_@item.Id" data-id="@item.Id">
                            <div class="product-image6">
                                <a href="/chi-tiet/@item.Slug">
                                    <img class="pic-1" src="/user-content/@item.ThumbnailImageUrl" alt="@item.Title">
                                </a>
                                <div class="product-add-option">
                                    <div class="d-flex justify-content-center">
                                        <h4>Vui lòng chọn</h4>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <ul class="add-option-value">

                                            @foreach (var item2 in item.Options)
                                            {
                                                if (item2.Name == "Size")
                                                {
                                                    foreach (var item3 in item2.Values)
                                                    {
                                                        <li>
                                                            <div class="form-check form-check-inline">
                                                                <input class="form-check-input" type="radio" name="inlineRadioOptions-@item2.Id" id="inlineRadio-@item3.Key" value="@item3.Key">
                                                                <label class="form-check-label" for="inlineRadio-@item3.Key" data-id="@item2.Id">@item3.Display</label>
                                                            </div>
                                                        </li>
                                                    }

                                                }
                                                else
                                                {
                                                    <li>
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input" type="radio" name="inlineRadioOptions-0" id="inlineRadio-one">
                                                            <label class="form-check-label" for="inlineRadio-one" data-id="@item2.Id">1 kích thước</label>
                                                        </div>
                                                    </li>
                                                }

                                            }

                                        </ul>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <div class="add-cart-option">
                                            <button class="btn btn-danger">hủy</button>
                                            <button class="btn btn-success js-add-cart" data-status="true" data-id="@item.Id" data-tip="Add to Cart">đệ trình</button>
                                        </div>

                                    </div>

                                </div>
                            </div>

                            <div class="product-content">
                                <h3 class="title"><a href="#">@item.Title</a></h3>
                                <div>
                                    @if (item.Sale > 0)
                                    {
                                        <span class="price">@item.Price.GetValueOrDefault().ToString("#,###")  ₫- </span>
                                        <span class="sale">@item.Sale.GetValueOrDefault().ToString("#,###")   ₫</span>
                                    }
                                    else
                                    {
                                <span class="price">@item.Price.GetValueOrDefault().ToString("#,###")   ₫</span>
                                    }

                                </div>

                            </div>
                            <ul class="social">
                                @*<li><a href="/chi-tiet/@item.Slug" class="js-show-modal1" data-id="@item.Id" data-tip="Quick View"><i class="fa fa-search"></i></a></li>*@
                                <li><a  href="javascript:void(0)" class="js-show-modal" data-toggle="modal" data-target="#exampleModal-1" data-id="@item.Id" data-tip="Quick view"><i class="fa fa-search"></i></a></li>
                                <li><a href="javascript:void(0)" class="js-add-wishlist" data-status="true" data-id="@item.Id" data-tip="Add to Wishlist"><i class="fal fa-heart"></i></a></li>
                                <li>
                                    <a href="javascript:void(0)" class="togget-add-cart" data-status="true" data-id="@item.Id" data-tip="Add to Cart">
                                        <i class="fa fa-shopping-basket" aria-hidden="true"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>

                    </div>

                </li>

            }
        </ul>
    </div>
</div>