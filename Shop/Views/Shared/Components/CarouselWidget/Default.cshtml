@model CarouselWidgetViewComponentVm
<div id="carousel@(Model.Id)" class="carousel slide" data-ride="carousel" data-interval="@Model.DataInterval">
    <ol class="carousel-indicators">
        @for (var i = 0; i < Model.Items.Count(); i++)
        {
            <li  type="button" data-target="#carousel@(Model.Id)" data-slide-to="@i" class="@(Model.Items[i] == Model.Items.First() ? "active" : null)" ></li>

        }

    </ol>
    <div class="carousel-inner">
        @foreach (var item in Model.Items)
        {
            <div class="carousel-item  @(item == Model.Items.First() ? "active" : null)">
                <a href="@item.TargetUrl">
                <img src="@item.Image" alt="@item.Caption" class="img-fluid">
                </a>
                <div class="carousel-caption d-none d-md-block" role="option">
                    <h5>@item.Caption</h5>
                </div>
            </div>
        }
    </div>
    <div class="carousel-control-prev" type="button" data-target="#carousel@(Model.Id)" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </div>
    <div class="carousel-control-next" type="button" data-target="#carousel@(Model.Id)" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </div>
</div>