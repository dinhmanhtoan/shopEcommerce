@model List<ProductVm>


<div class="product">
    <div class="container">
        <div class="row">
            <h2 class="title">Sản phẩm hot</h2>
            @if (Model == null)
            {
                <h1>khong co san pham nao</h1>
            }
            else
            {
                <div class="col-md-6">
                    @for (int i = 0; i < Model.Count; i++)
                    {

                        if (i <= 3 && Model.Count >= 3)
                        {

                            <div class="col-md-6 col-6 product-item">
                                <div class="product-grid6 " id="item_@Model[i].Id" data-id="@Model[i].Id">
                                    <div class="product-image6">
                                        <a href="/chi-tiet/@Model[i].Slug">
                                            <img class="pic-1" src="/user-content/@Model[i].ThumbnailImageUrl" alt="@Model[i].Title">
                                        </a>
                                    </div>
                                    <div class="product-content">
                                        <h3 class="title"><a href="#">@Model[i].Title</a></h3>
                                        <div>
                                            @if (@Model[i].Sale > 0)
                                            {
                                            <span class="price">@Model[i].Price.GetValueOrDefault().ToString("#,###")   ₫- </span>
                                                <span class="sale">@Model[i].Sale.GetValueOrDefault().ToString("#,###")   ₫</span>
                                            }
                                            else
                                            {
                                        <span class="price">@Model[i].Price.GetValueOrDefault().ToString("#,###")   ₫</span>
                                            }

                                        </div>

                                    </div>
                                    <ul class="social">
                                        @*<li><a href="/chi-tiet/@Model[i].Slug" class="js-show-modal1" data-id="@Model[i].Id" data-tip="Quick View"><i class="fa fa-search"></i></a></li>*@
                                        <li><a href="javascript:void(0)" class="js-show-modal" data-toggle="modal" data-target="#exampleModal-1" data-id="@Model[i].Id" data-tip="Quick view"><i class="fa fa-search"></i></a></li>
                                        <li><a href="javascript:void(0)" class="js-add-wishlist" data-status="true" data-id="@Model[i].Id" data-tip="Add to Wishlist"><i class="fal fa-heart"></i></a></li>
                                        <li>
                                            <a href="javascript:void(0)" class="js-add-cart" data-status="true" data-id="@Model[i].Id" data-tip="Add to Cart">
                                                <i class="fa fa-shopping-basket" aria-hidden="true"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                            </div>

                        }
                    }
                </div>
                <div class="col-md-6 product-item">
                    <div class="product-grid6" id="item_@Model[4].Id" data-id="@Model[4].Id">

                        <div id="clockdiv"></div>
                        <div class="product-image6">
                            <a href="/chi-tiet/@Model[4].Slug">
                                <img class="pic-1" src="/user-content/@Model[4].ThumbnailImageUrl">
                            </a>
                        </div>
                        <div class="product-content">
                            <h3 class="title"><a href="#">@Model[4].Title</a></h3>
                            <div>
                                @if (@Model[4].Sale > 0)
                                {
                                <span class="price">@Model[4].Price.GetValueOrDefault().ToString("#,###")   ₫- </span>
                                <span class="sale">@Model[4].Sale.GetValueOrDefault().ToString("#,###")   ₫</span>
                                }
                                else
                                {
                            <span class="price">@Model[4].Price.GetValueOrDefault().ToString("#,###")   ₫</span>
                                }

                            </div>

                        </div>
                        <ul class="social">
                            @*<li><a href="/chi-tiet/@Model[4].Slug" class="js-show-modal1" data-id="@Model[4].Id" data-tip="Quick View"><i class="fa fa-search"></i></a></li>*@

                            <li><a href="javascript:void(0)" class="js-show-modal" data-toggle="modal" data-target="#exampleModal-1" data-id="@Model[4].Id" data-tip="Quick view"><i class="fa fa-search"></i></a></li>
                            <li><a href="javascript:void(0)" class="js-add-cart" data-status="true" data-id="@Model[4].Id" data-tip="Add to Cart"><i class="fa fa-shopping-basket" aria-hidden="true"></i></a></li>
                        </ul>
                        <span class="product-new-label">Sale</span>
                        <span class="product-discount-label">@(((Model[4].Sale - Model[4].Price)/(-Model[4].Price))?.ToString("0%"))</span>
                    </div>

                </div>
            }
        </div>
    </div>

</div>
