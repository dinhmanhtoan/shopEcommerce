<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>
    @RenderSection("additionalMeta", false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style2.css">
    <link rel="stylesheet" href="~/css/list_product.css">
    <link rel="stylesheet" href="~/css/single.css">
    <link rel="stylesheet" href="~/js/bootstrap-star-rating/css/star-rating.css">
    <!--============================Animation========================================-->
    <link rel="stylesheet" type="text/css" href="~/css/animation.css">
    <!--============================Animation========================================-->
    <link rel="stylesheet" href="~/lib/toastr/build/toastr.min.css" />
    @RenderSection("head", required: false)
</head>

<body>
    <div class="loading">
        <div class="lds-ripple"><div></div><div></div></div>
    </div>
    <header>
        <div id="header-top">
            <div class="container">
                <div class="top__content">
                    <ul class="nav language">
                        <li class="dropdown language__dropdown">
                            <a class="dropdown-toggle language__btn" data-toggle="dropdown" href="javascript:void(0);">
                                <img class="language__img" src="~/images/vn.png" alt="Việt Nam">
                            </a>
                            <ul class="dropdown-menu language__menu">
                                <li>
                                    <span class="language--change">
                                        <img class="language__icon" src="~/images/vn.png" alt="Việt Nam" />
                                        Tiếng việt
                                    </span>
                                </li>
                                <li>
                                    <span class="language--change">
                                        <img class="language__icon" src="~/images/en.png" alt="English" />
                                        English
                                    </span>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <p class="language__text">
                                <i class="fa fa-volume-control-phone" aria-hidden="true"></i> +84 54984613
                            </p>
                        </li>
                    </ul>
                    <ul class="nav link__context">
                        @*<li><a href="/user/orders">Track order</a></li>*@
                        <li><a href="/Contact">Contact us</a></li>
                        <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-envelope-o" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="mobile_nav">
            <div class="mobile__nav navbar">
                <a asp-controller="Home" asp-action="Index" class="mobile__logo"><p>T<span>oan</span></p></a>

                <div class="mobile__group-btn">
                    <ul>
                        <li>
                            <a href="" class="js-show-modal-search"><i class="fa fa-search" aria-hidden="true"></i></a>
                        </li>
                        <li class="wishlist-icon" id="wishlist-icon">
                            <a asp-controller="WishList" asp-action="PrivateList">
                                <i class="fa fa-heart"></i>
                                @await Component.InvokeAsync("WishListBadge");
                            </a>
                        </li>
                        <li class="cart-icon" id="card">
                            @await Component.InvokeAsync("CartBadge")
                        </li>
                        <li class="open-close">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="header-mid">
            <div class="container">
                <div class="close-menu close-open"><i class="fas fa-window-close"></i></div>
                <div class="row">
                    <div class="col-md-9 col-12">
                        <div class="navbar main__nav">
                            <a asp-controller="Home" asp-action="Index" class="navbar-brand main__logo"><p>T<span>oan</span></p></a>
                            <div class="menu-main">
                                @await Component.InvokeAsync("CategoryMenu")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-0">
                        <div class="menu-login">
                            <ul class="nav">
                                <li>
                                    <a href="javascript:void(0)" class="js-show-modal-search"><i class="fa fa-search" aria-hidden="true"></i></a>
                                </li>
                                <li id="wishlist-icon" class="wishlist-icon">
                                    <a asp-controller="WishList" asp-action="PrivateList">
                                        <i class="fa fa-heart"></i>
                                        @await Component.InvokeAsync("WishListBadge")
                                    </a>
                                </li>
                                <li class="cart-icon" id="cart">@await Component.InvokeAsync("CartBadge")</li>
                            </ul>
                        </div>
                    </div>
                </div>
                @*Serch Modal*@
                <div class="modal-search-header js-hide-modal-search">
                    <div class="container-search-header">
                        <button class="btn-hide-modal-search js-hide-modal-search">
                            <i class="fa fa-window-close-o" aria-hidden="true"></i>
                        </button>

                        <form class="wrap-search-header" method="get" action="/search">
                            <button class="trans-04">
                                <i class="fa fa-search"></i>
                            </button>
                            <input type="text" name="query" placeholder="Tìm kiếm...">
                        </form>
                    </div>
                </div>


            </div>
        </div>
        <div id="header-bottom">
            <p>Miễn phí giao hàng nội thành
            <p>
        </div>
        <div class="clearfix"></div>
    </header>
    <div class="container-fluid">
        <main class="container pt-4">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-midde">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <h4>Customer Service</h4>
                        <vc:menu menu-id="1"></vc:menu>
                    </div>
                    <div class="col-md-3">
                        <h4>Information</h4>
                        <vc:menu menu-id="2"></vc:menu>
                    </div>
                    <div class="col-md-6">
                        <h4>ShopCommerce</h4>
                        <p>The first ecommerce system built on .NET Core.</p>
                        <p>ShopCommerce to use and easy to customize</p>
                        <p>Cross platform and Open source</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p>Ⓒ Created by Toan</p>
                    </div>
                    <div class="col-md-6">
                        <div class="cards text-right">
                            <img src="~/img/cards.png" alt="Credit Cards" style="width: 187px">
                        </div>
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </footer>
    <div class="btn-back-to-top" id="myBtn" style="display: flex;">
        <span class="symbol-btn-back-to-top">
            <i class="fas fa-chevron-up"></i>
        </span>
    </div>
    <div class="modal fade" id="exampleModal-1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="container bg0">
                        <div class="p-t-15 p-b-20 how-pos3">
                            <div style="float:right">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <i class="fa fa-times" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div id="modal-item"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="overlay-modal2"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/extra-libs/taskboard/js/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/toastr/build/toastr.min.js"></script>
    <script src="~/js/numeral.min.js"></script>
    <script src="~/js/bootstrap-star-rating/js/star-rating.min.js"></script>

    <script src="~/js/main.js"></script>
    <script src="~/js/wishlist.js"></script>
    <script src="~/js/single.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>

