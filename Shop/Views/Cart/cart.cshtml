@model CartVm

@section head{
    <link rel="stylesheet" href="~/css/cart.css">
}
@if(Model == null){
   <div class="mt-2">
        <p class="alert alert-danger">Giỏ hàng trống</p>
   </div>
}else{
    @if (Model.Items.Count() > 0)
    {
         <div id="shoppingCart">
             @await Html.PartialAsync("/Views/Cart/_Cart.cshtml", Model)
         </div>
    }
    else
    {
        <div class="mt-2">
            <p class="alert alert-danger">Giỏ hàng trống</p>
        </div>
    }
}

@section Scripts{
    <script src="~/js/cart.js"></script>
}