@model IEnumerable<Category>;

@{
    ViewData["Title"] = "Index";
   
}
@section styles{
<style>
    .thumnail {
        display: flex;
        justify-content: center;
        align-items: center,
    }
</style>
    
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <h4 class="card-title">Danh Sách Danh mục</h4>
            </div>
            <div class="col-md-6">
                <div class="text-right">
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                        Thêm mới
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Thumbnail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EditOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EditBy)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="thumnail">
                            @if (item.Thumbnail != null)
                            {
                                <br />
                                <img id="previewThumbnail" width="90" height="100" src="~/user-content/@item.Thumbnail.FileName" />
                                <br />
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EditOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EditBy)
                        </td>
                        <td>
                            <a asp-action="Updated" asp-route-id="@item.Id">Sửa</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Chi Tiết</a> |
                            <a asp-action="Deleted" asp-route-id="@item.Id">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

