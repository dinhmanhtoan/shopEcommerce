@model ProductOption
@{
    ViewData["Title"] = "Chỉnh Sửa";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">
            Cập nhật Lựa Chọn
        </h3>
        <p class="card-subtitle">@Model.Name</p>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 offset-md-3">Update
                <form asp-action="Updated" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label>Tên Lựa Chọn</label>
                        <input asp-for="Name" class="form-control Title" placeholder="Tên Lựa Chọn" required value="@Model.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">
                            Lưu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="card-link">Quay lại chi tiết</a>
    </div>
</div>

