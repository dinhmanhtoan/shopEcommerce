@model ProductWidgetForm;
<div class="card">
    <div class="card-header">
        <h2 class="text-secondary">Edit Product Widget</h2>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div class="bg-danger col-md-10 offset-md-2 d-none" asp-validation-summary="All"></div>
            <div id="loaderror" class="col-md-10 offset-md-2"></div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Widget Name</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" class="form-control" value="@Model.Name" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Widget Zone</label>
                <div class="col-md-10">
                    <select type="text" asp-for="WidgetZoneId" asp-items="@Model.WidgetZoneItems" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Publish Start</label>
                <div class="col-md-10">
                    <div class="datepicker input-group">
                        <input type="text" asp-for="PublishStart" value="@(Model.PublishStart.HasValue ? Model.PublishStart.GetValueOrDefault().ToString("o") : "")" data-input />
                        <a class="input-button" title="toggle" data-toggle>
                            <i class="far fa-calendar"></i>
                        </a>
                        <a class="input-button" title="clear" data-clear>
                            <i class="far fa-times-circle"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Publish End</label>
                <div class="col-md-10">
                    <div class="datepicker input-group">
                        <input type="text" asp-for="PublishEnd" value="@(Model.PublishEnd.HasValue ? Model.PublishEnd.GetValueOrDefault().ToString("o") : "")" data-input />
                        <a class="input-button" title="toggle" data-toggle>
                            <i class="far fa-calendar"></i>
                        </a>
                        <a class="input-button" title="clear" data-clear>
                            <i class="far fa-times-circle"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Category</label>
                <div class="col-md-10">
                    <select type="text" asp-for="@Model.Setting.CategoryId" asp-items="@Model.Setting.CategoryListItems" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Number of Products</label>
                <div class="col-md-10">
                    <input type="text" asp-for="@Model.Setting.NumberOfProducts" value="@Model.Setting.NumberOfProducts" class="form-control number-validate" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Order By</label>
                <div class="col-md-10">
                    <select type="text" asp-for="Setting.OrderBy" asp-items="@Model.Setting.OrderByListItems" class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Display Order</label>
                <div class="col-md-10">
                    <input type="text" asp-for="DisplayOrder" class="form-control number-validate" value="@Model.DisplayOrder" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                        <div class="form-check">
                        <input class="form-check-input IsHot" asp-for="@Model.Setting.FeaturedOnly" type="checkbox" >
                        <label class="form-check-label" asp-for="@Model.Setting.FeaturedOnly">
                            Is Featured Products Only
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <div class="btn btn-success" id="btn-submit">Save</div>
                    <a asp-controller="Widget" asp-action="Index" class="btn btn-light">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
         @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}