@model Brand
@{
    ViewData["Title"] = "Thông tin chi tiết";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Tên thương hiệu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                đường dẫn
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Slug)
            </dd>
            <dt class="col-sm-2">
               Mô Tả
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
               Hiển thị
            </dt>
            <dd class="col-sm-10">
                @if (Model.IsPublished == true)
                {
                    <span>Có</span>
                }
                else
                {
                    <span>Chưa</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Updated" asp-route-id="@Model.Id">Chỉnh Sửa</a> |
        <a asp-action="Index">Quay Lại danh sách</a>
    </div>
</div>

