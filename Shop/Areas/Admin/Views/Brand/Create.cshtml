@model Brand

<div class="card">
    <div class="card-header">
        <h2 class="text-secondary">Create Brand</h2>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="text-white bg-danger offset-md-2 d-none" asp-validation-summary="All"></div>
            <div id="loaderror" class="offset-md-2 col-md-10"></div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Name</label>
                <div class="col-md-10">
                    <input asp-for="Name" type="text" class="form-control Title" maxlength="250" />
                    <small>Tối đa 250 ký tự</small>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Slug</label>
                <div class="col-md-10">
                    <input asp-for="Slug" type="text" class="form-control" maxlength="250" id="permalink" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Description</label>
                <div class="col-md-10">
                    <textarea asp-for="Description" class="form-control" rows="4" cols="50"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-2 col-md-10">
                    <div class="form-check">
                        <input asp-for="IsPublished" class="form-check-input" type="checkbox" id="IsPublished">
                        <label class="form-check-label" asp-for="IsPublished">IsPublished</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="offset-md-2 col-md-10">
                    <button class="btn btn-primary" type="submit" id="btn-submit">Save</button>
                    <a asp-action="Index" class="btn btn-light">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="~/lib/Slug/speakingurl.min.js"></script>
<script src="~/lib/Slug/jquery.stringtoslug.js"></script>
<script>
    $(document).ready(function () {
        $(".Title").stringToSlug();

    });
</script>

}