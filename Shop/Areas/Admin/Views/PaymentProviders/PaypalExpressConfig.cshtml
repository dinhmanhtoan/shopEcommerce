@model PaypalExpressConfigForm
<div class="card">
    <div class="card-header">
        <h2 class="text-secondary">PaypalExpress Settings</h2>
    </div>
    <div class="card-body">
        <form asp-action="PaypalExpressConfig" method="post">
            <div class="bg-danger text-white offset-md-2" asp-validation-summary="All"></div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <div class="form-check">
                        <input asp-for="IsSandbox" class="form-check-input"/>
                        <label asp-for="IsSandbox" class="form-check-label">Sandbox</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Client ID</label>
                <div class="col-md-10">
                    <input asp-for="ClientId" type="text"  class="form-control" value="@Model.ClientId"/>
                </div>
            </div>
              <div class="form-group row">
                <label class="col-md-2 col-form-label">Client Secret</label>
                <div class="col-md-10">
                    <input asp-for="ClientSecret" type="text"  class="form-control" value="@Model.ClientSecret"/>
                </div>
            </div>
              <div class="form-group row">
                <label class="col-md-2 col-form-label">Payment Fee in %</label>
                <div class="col-md-10">
                    <input asp-for="PaymentFee" type="text"  class="form-control" value="@Model.PaymentFee"/>
                </div>
            </div>
              <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button class="btn btn-success">Save</button>
                    <a asp-action="Index" class="btn btn-light">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}