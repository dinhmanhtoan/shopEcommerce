@model StripeConfigForm

<div class="card">
    <div class="card-header">
        <h2 class="text-secondary">Stripe Settings</h2>
    </div>
    <div class="card-body">
        <form asp-action="StripeConfig" method="post">
            <div class="bg-danger text-white offset-md-2" asp-validation-summary="All"></div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Public Key</label>
                <div class="col-md-10">
                    <input asp-for="PublicKey" type="text" class="form-control" value="@Model.PublicKey" />
                </div>
            </div>
              <div class="form-group row">
                <label class="col-md-2 col-form-label">Secret Key</label>
                <div class="col-md-10">
                    <input asp-for="PrivateKey" type="text" class="form-control" value="@Model.PrivateKey"/>
                </div>
            </div>
              <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button class="btn btn-success">Save</button>
                    <a asp-action="Index" class="btn btn-light">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}