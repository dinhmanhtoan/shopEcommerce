@model Product

@{
    ViewData["Title"] = "Deleted";

}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Deleted</h3>
        <p class="card-subtitle">Are you sure you want to delete this?</p>
    </div>
    <div class="card-body">
    
        <div>
            <h4>Product</h4>
            <hr />
            <dl class="row">

                <dt class="col-sm-2">
                    Mã
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Code)
                </dd>
                <dt class="col-sm-2">
                    Tên
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    Chi Tiết
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Thumbnail)
                </dt>
                <dd class="col-sm-10">
                    @if (@Model.Thumbnail != null)
                    {
                        <img id="previewThumbnail" width="90" height="100" src="~/user-content/@Model.Thumbnail.FileName" />
                    }
                </dd>
                <dt class="col-sm-2">
                    Ngày Tạo
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedOn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsFuture)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.IsFuture == true)
                    {
                        <span>Có</span>
                    }
                    else
                    {
                        <span>Không</span>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EditOn)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EditOn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsHot)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.IsHot == true)
                    {
                        <span>Có</span>
                    }
                    else
                    {
                        <span>Không</span>
                    }
                </dd>
            </dl>

            <form asp-action="DeletedById" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>

    </div>
</div>